{% extends "base.html.twig" %}

{% block title %}Panel Administracyjny{% endblock %}

{% block content %}

    <div class="container">
    <article>
     
        
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4 offset-md-4">
                <header>
                    <h1 class="text-center">Logowanie</h1>
                </header>
                
               {% if app.session.has('success') %}
                   <div class="alert alert-success">{{app.session.remove('success')}}</div>
                {% endif %}
                
                 {% if error %}
                         <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                         {% endif %}
                <div class="login">
                   
                   
                    {{ form_start(login_form, {attr: {novalidate: 'novalidate', 'action':path('login')}}) }}
                    {{ form_row(login_form.username, {attr: {value : last_username}}) }}
                    {{ form_row(login_form.password) }}
                    {{ form_row(login_form.remember_me) }}
                    <div style="margin-bottom: 14px;">
                    <a href="{{ path('remember_password') }}">Przypomnij mi has≈Ço</a>
                    </div>
                    {{ form_end(login_form) }}
                </div>
                
            </div>
            </div>
        

     

    </article>
</div>
{% endblock %}