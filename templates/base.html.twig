{% import 'macros.html.twig' as macro %}
﻿<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %} | Warto Być Razem{% endblock %}</title>

        <!-- meta tags -->
        <meta charset="utf-8">
        <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1'>
        <meta name="robots" content="ALL">
        <meta name="revisit-after" content="3 days">
        <META NAME="description" CONTENT="Stowarzyszenie Warto Być Razem zajmuje się organizacją czasu wolnego osób niewidomych, słabo widzących, starszych oraz młodzieży szkolnej.">

        <META NAME="keywords" CONTENT="goalball, goalball kraków, stowarzyszenie, osoby starsze, osoby niewidome, osoby slabowidzace, osoby slabo widzace, osoby z dysfunkcja wzroku, Stowarzyszenie Warto Być Razem, Warto Być Razem, stowarzyszenie warto być razem, warto być razem, warto byc razem, warto, byc, razem, fundacja, stowarzyszenie, osoby z dysfunkcją wzroku, starsze, integracja, osoby słabowidzące, osoby slabo widzace, osoby z dysfunkcja wzroku, Stowarzyszenie Warto Być Razem, Warto Być Razem, stowarzyszenie warto być razem, warto być razem, warto byc razem, warto, byc, razem, fundacja, stowarzyszenie, osoby z dysfunkcją wzroku, starsze, osoby słabowidzące, młodzież szkolna, www.wartobycrazem.pl, wartobycrazem.pl, wartobycrazem">
        <META NAME="copyright" CONTENT="wartobycrazem.pl">
        <meta name="Author" content="Stowarzyszenie Warto Być Razem">
        <META name="abstract" CONTENT="Stowarzyszenie Warto Być Razem zajmuje się organizacją czasu wolnego osób niewidomych, słabo widzących, starszych oraz młodzieży szkolnej.">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/fontello/css/fontello.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/lightbox.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/newmain.css') }}">
        {% endblock %}

    </head>
    <body>

        <header>

            <div class="container-fluid">
                <div class="row my-5">
                    <div class="col-sm-12 my-5 text-center">
                        <img src="{{ asset('img/logo.png') }}" alt="wartobycrazem.pl" class="img-fluid">
                    </div>
                </div>
            </div>

            {{ macro.menu() }}
        </header>

        <main>
            
            {% block content %}{% endblock %}
            
        </main>

        <footer>

            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <div class="socials">
                            <div class="fb"><a href="https://www.facebook.com/GoalBallKrakow" target="_blank"><i class="icon-facebook"></i></a></div>
                            <div class="yt"><i class="icon-youtube"></i></div>

                        </div>
                    </div>
                </div>
                
                    <div class="row mb-5">
                        <div class="col-md-12 my-5">
                        <header>
                            <h1 class="mt-1">Partnerzy</h1>
                        </header>
                        </div>
                        <div class="col-sm-3 text-center">
                            <img class="img-fluid" src="{{ asset('img/partners/krakow.jpg') }}" alt="Gmina Miejska Kraków">
                        </div>
                        <div class="col-sm-3 text-center d-flex align-items-center">
                            <img class="img-fluid" src="{{ asset('img/partners/egopowerlab.gif') }}" alt="Ego Power Lab">
                        </div>
                         <div class="col-sm-3 text-center d-flex align-items-center">
                            <img class="img-fluid" src="{{ asset('img/partners/mops.png') }}" alt="MOPS Kraków">
                        </div>
                         <div class="col-sm-3 text-center">
                            <img class="img-fluid" src="{{ asset('img/partners/kkzw.png') }}" alt="Kocham Kraków z Wzajemnością">
                        </div>
                    </div>
                
                    
                <div class="row mt-5 mb-1">    
                    <div class="col-md-12">
                        <div class="copy copyFont">
                            &copy; Stowarzyszenie Warto Być Razem 2018
                        </div>
                    </div>
                </div>
            </div>
        </footer>


        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-2.2.1.js') }}"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('js/jqueryui/external/jquery/jquery.js') }}"></script>
            <script src="{{ asset('js/jquery-lightbox-master/jquery.lightbox.js') }}"></script>
            <script src="{{ asset('js/scripts.js') }}"></script>

        {% endblock %}

    </body>
</html>
